        <!-- Groupes de sécurité -->
        <record id="group_fleet_user" model="res.groups">
            <field name="name">Utilisateur de flotte</field>
            <field name="category_id" ref="base.module_category_operations_fleet"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

